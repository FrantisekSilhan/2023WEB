@page "/Article/Edit/{id}"
@model Joomla.Pages.Articles.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.Id" />
            <div class="form-group">
                <label asp-for="ArticleIM.Title" class="control-label"></label>
                <input asp-for="ArticleIM.Title" class="form-control" />
                <span asp-validation-for="ArticleIM.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArticleIM.Content" class="control-label"></label>
                <input asp-for="ArticleIM.Content" class="form-control" />
                <span asp-validation-for="ArticleIM.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Articles/Index">Back to List</a>
</div>